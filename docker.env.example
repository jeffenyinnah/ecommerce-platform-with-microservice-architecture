# Docker Environment Variables
# Copy this file to .env (in root directory) and update with your values
# Used by docker-compose.yml

# ============================================================================
# PostgreSQL Database Configuration
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_DB=microservices_db

# ============================================================================
# M-Pesa Configuration (Payment Service)
# ============================================================================
MPESA_API_HOST=api.sandbox.vm.co.mz
MPESA_BEARER_TOKEN=your-mpesa-bearer-token-here
MPESA_SERVICE_PROVIDER_CODE=171717

# ============================================================================
# Service URLs (Internal Docker Network)
# ============================================================================
ORDER_SERVICE_URL=http://order:4001
EMAIL_SERVICE_URL=http://email:4002

# ============================================================================
# Authentication (MUST match across all services)
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SERVICE_API_KEY=your-service-api-key-change-in-production

# ============================================================================
# Client Public URLs (Accessed from browser)
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_AUTH_URL=http://localhost:4003
NEXT_PUBLIC_ORDER_URL=http://localhost:4001

